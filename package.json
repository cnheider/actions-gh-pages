{
  "name": "actions-github-pages",
  "version": "3.8.0",
  "description": "GitHub Actions for GitHub Pages",
  "main": "lib/index.js",
  "engines": {
    "node": ">=12.20.1",
    "npm": ">=7.5.2"
  },
  "scripts": {
    "postinstall": "npx husky install",
    "all": "npm run format && npm run lint && npm test",
    "lint": "eslint ./{src,__tests__}/**/*.ts",
    "lint:fix": "eslint --fix ./{src,__tests__}/**/*.ts",
    "test": "jest --coverage --verbose --detectOpenHandles",
    "build": "ncc build ./src/index.ts -o lib --minify",
    "tsc": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format:check": "prettier --check '**/*.ts'",
    "release": "standard-version"
  },
  "lint-staged": {
    "{src,__tests__}/**/*.ts": [
      "prettier --check",
      "eslint"
    ],
    "README.md": [
      "npx doctoc@2.1.0 --github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peaceiris/actions-gh-pages.git"
  },
  "keywords": [
    "GitHub Actions",
    "Actions",
    "JavaScript Action",
    "TypeScript Action",
    "GitHub Pages",
    "gh-pages"
  ],
  "author": "peaceiris",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peaceiris/actions-gh-pages/issues"
  },
  "homepage": "https://github.com/peaceiris/actions-gh-pages#readme",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^5.0.0",
    "@actions/glob": "^0.2.0",
    "@actions/io": "^1.1.1",
    "@types/shelljs": "^0.8.9",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/js-yaml": "^4.0.4",
    "@types/node": "~14",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-circus": "^27.3.1",
    "js-yaml": "^4.1.0",
    "lint-staged": "^12.0.2",
    "prettier": "2.4.1",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  }
}
